/* Pages/my/my.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}


/*用户信息样式*/
.userInfoContainer{
  width: 100%;
  height: 500rpx;
  background: linear-gradient(to right top, #5675ad, #64bdcc);
  border-radius: 0 0 50rpx 50rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.uesrInfo{
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  height: auto;
}

.userAvatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.userInfo-right{
  margin-left: 15rpx;
  display: inline-flex;
  flex-direction: column;
}

.userName{
  font-size: 50rpx;
  font-weight: bold;
}

.userDetail{
  font-size: 30rpx;
  flex-wrap: wrap;
  font-weight: bold;
}

/*功能区样式*/
.functionBar{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: 400rpx;
  left: 50%;
  margin-left: -45%;
  width: 90%;
  height: 180rpx;
  border-radius: 20rpx;
  background-color: white;
  box-shadow: 0rpx 4rpx 15rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.function{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  flex-grow: 1;
}

.function:active{
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.function image{
  margin-bottom: 15rpx;
  width: 60rpx;
  height: 60rpx;
}

.function text{
  font-size: 30rpx;
  color: #969696;
}