/* Pages/publishActivity/publishActivity.wxss */
@import '../../utils/backBtn.wxss';

page{
  width: 100%;
  height: 100%;
  background-color: #efefef;
}

.container{
  width: 100%;
}

.header{
  height: 330rpx;
  width: 100%;
  background: linear-gradient(to right bottom, #a94ad4, #6c26b5);
  border-radius: 0 0 20rpx 20rpx;
}

/*标题样式*/
.title{
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  position: absolute;
  display: block;
  width: 200rpx;
  left: 50%;
  margin-left: -100rpx;
  text-align: center;
  top: 70rpx;
}

/*发布按钮样式*/
.publishBtn{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #8635c2;
  position: absolute;
  right: 30rpx;
  top: 270rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 2rpx 3rpx 5rpx rgba(0, 0, 0, 0.3);
}

.publishBtn image{
  width: 60rpx;
  height: 60rpx;
}

/*表单样式*/
form{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.form-item{
  margin-top: 20rpx;
  padding: 10rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0rpx 3rpx 1rpx rgba(0, 0, 0, 0.3);
  border-radius: 0 0 10rpx 10rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: auto;
  flex-wrap: wrap;
}

input{
  height: 100rpx;
  width: 100%;
}

textarea{
  width: 100%;
  height: 500rpx;
}

scroll-view{
  height: 200rpx;
}

.addPicBtn, .pictureContainer{
  width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #ececec;
  box-sizing: border-box;
  margin-right: 30rpx;
}

.pictureContainer{
  position: relative;
}

.cancelBtn{
  position: absolute;
  right: -20rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
}

.cancelBtn image{
  width: 100%;
  height: 100%;
}

.pictureContainer image{
  width: 100%;
  height: 100%;
}

.addPicBtn image{
  width: 100rpx;
  height: 100rpx;
}

.flexContainer{
  width: 2000rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.timePickerContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
}