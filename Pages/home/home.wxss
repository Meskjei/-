/* Pages/home/home.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

/*头部样式*/

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 80rpx;
  color: #282c2b;
  font-weight: bold;
}

.activityType {
  border: 1rpx solid #00b2bc;
  border-radius: 25rpx;
  padding: 3rpx 15rpx;
  background-color: transparent;
  text-align: center;
}

.activityType text {
  color: #00b2bc;
  line-height: 35rpx;
}

.activityType view {
  display: inline-flex;
}

.activityType view text {
  margin-left: 10rpx;
  transform: rotate(90deg);
}

/*热门活动样式*/

.popularActivityContainer {
  box-sizing: border-box;
  margin-top: 20rpx;
  height: 600rpx;
  width: 100%;
}

.popularActivityContainer swiper {
  width: 100%;
  height: 100%;
}

.popularActivityContainer .title {
  display: inline-block;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  font-weight: lighter;
  color: #a9abaa;
}

.popularActivity {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.popularActivity image {
  width: 100%;
  height: 350rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

.popularActivity text {
  font-size: 45rpx;
  font-weight: bold;
  color: #282c2b;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
}
