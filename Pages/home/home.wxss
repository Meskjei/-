/* Pages/home/home.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

/*头部样式*/

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 80rpx;
  color: #282c2b;
  font-weight: bold;
}

.activityType {
  border: 1rpx solid #00b2bc;
  border-radius: 25rpx;
  padding: 3rpx 15rpx;
  background-color: transparent;
  text-align: center;
}

.activityType text {
  color: #00b2bc;
  line-height: 35rpx;
}

.activityType view {
  display: inline-flex;
}

.activityType view text {
  margin-left: 10rpx;
  transform: rotate(90deg);
}

/*热门活动样式*/

.popularActivityContainer {
  box-sizing: border-box;
  margin-top: 20rpx;
  height: 600rpx;
  width: 100%;
  border-bottom: 5rpx solid #ececec;
}

.popularActivityContainer swiper {
  width: 100%;
  height: 100%;
}

.popularActivityContainer .title {
  display: inline-block;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  font-weight: lighter;
  color: #a9abaa;
}

.popularActivity {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.popularActivity image {
  width: 100%;
  height: 350rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

.popularActivity text {
  font-size: 45rpx;
  font-weight: bold;
  color: #282c2b;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.publishInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.publisherInfo {
  margin-top: 10rpx;
  height: 60rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-start;
}

.publisherInfo image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 35rpx;
}

.publisherInfo text {
  margin-left: 10rpx;
  align-self: flex-end;
  font-size: 30rpx;
  color: #282c2b;
}

.publishInfo .publishTime {
  font-size: 25rpx;
  color: #8d8f90;
  font-weight: bold;
}

/*活动列表样式*/

.activityContainer {
  margin-top: 40rpx;
}

.activityContainer .title {
  display: block;
  color: #8d8f90;
  font-size: 40rpx;
  padding-left: 15rpx;
  border-left: 20rpx solid #00b2bc;
  margin-bottom: 20rpx;
}

.activity {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 200rpx;
  width: 100%;
}

.activity-left {
  display: inline-flex;
  width: 60%;
  flex-direction: column;
  justify-content: flex-start;
}

.activityTitle{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.activityBrief {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #bebfbf;
  font-weight: bold;
}

.activity .publishInfo text:first-of-type{
  font-size: 28rpx;
}

.activity-right{
  display: inline-flex;
  width: 38%;
  height: 100%;
}

.activity-right image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}