/* Pages/chooseActivity/chooseActivity.wxss */
@import '../../utils/backBtn.wxss';

.title{
  position: absolute;
  top: 70rpx;
  display: block;
  width: 400rpx;
  font-size: 40rpx;
  left: 50%;
  margin-left: -200rpx;
  text-align: center;
  color: white;
}

.header{
  width: 100%;
  height: 230rpx;
  background: linear-gradient(to right top, #5675ad, #64bdcc);
  border-radius: 0 0 30rpx 30rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.activityContainer{
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 100%;
}

.activity{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 200rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 1rpx 2rpx 5rpx rgba(0, 0, 0, 0.3);
  padding: 20rpx;
  justify-content: space-between;
}

.activity:active{
  background-color: rgba(0, 0, 0, 0.3);
}

.activity-left{
  display: flex;
  flex-direction: column;
}

.activitiyTitle{
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #989898;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.publishTime{
  font-size: 30rpx;
  color: #ececec;
  font-weight: bold;
}